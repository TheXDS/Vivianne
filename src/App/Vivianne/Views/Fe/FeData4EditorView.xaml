                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock TextAlignment="Right" Margin="5" Text="{x:Static st:FeDataEditorView.Acceleration}"/>
