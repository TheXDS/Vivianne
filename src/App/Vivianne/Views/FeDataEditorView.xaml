<UserControl
    x:Class="TheXDS.Vivianne.Views.FeDataEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:gn="http://schemas.thexds.local/ganymede"
    xmlns:mcart="http://schemas.thexds.local/mcart"
    xmlns:ct="clr-namespace:TheXDS.Vivianne.Controls"
    xmlns:md="clr-namespace:TheXDS.Vivianne.Models;assembly=VivLib"
    xmlns:st="clr-namespace:TheXDS.Vivianne.Resources.Strings.Views"
    xmlns:stc="clr-namespace:TheXDS.Vivianne.Resources.Strings;assembly=Vivianne.Common"
    xmlns:vm="clr-namespace:TheXDS.Vivianne.ViewModels;assembly=Vivianne.Common"
    xmlns:mdl="clr-namespace:TheXDS.Vivianne.Models;assembly=VivLib"
    xmlns:controls="clr-namespace:TheXDS.Vivianne.Controls"
    xmlns:viewmodels="clr-namespace:TheXDS.Vivianne.ViewModels;assembly=Vivianne.Common"
    xmlns:models="clr-namespace:TheXDS.Vivianne.Models;assembly=Vivianne.Common"
    xmlns:vc="clr-namespace:TheXDS.Vivianne.ValueConverters"
    xmlns:sco="clr-namespace:System.Collections.ObjectModel;assembly=System.ObjectModel"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:hlp="clr-namespace:TheXDS.Vivianne.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:valueconverters="clr-namespace:TheXDS.Vivianne.ValueConverters"
    d:DataContext="{d:DesignInstance Type=vm:FeDataEditorViewModel}"
    mc:Ignorable="d"
    d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UniformGrid Rows="1" Margin="10" HorizontalAlignment="Center" Grid.ColumnSpan="2">
            <Button Padding="10,2" Command="{Binding SaveCommand, Mode=OneWay}" Content="{x:Static stc:Common.Save}"/>
        </UniformGrid>
        <CheckBox Margin="10,0" Style="{StaticResource ToggleSwitch}" Grid.Column="2">
            <TextBlock Text="{x:Static st:FeDataEditorView.LinkEdits}" Foreground="White"/>
        </CheckBox>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollViewer">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                </Style>
                <Style TargetType="ui:TextBox" BasedOn="{StaticResource {x:Type ui:TextBox}}">
                    <Setter Property="Margin" Value="5"/>
                </Style>
                <Style TargetType="ui:NumberBox" BasedOn="{StaticResource {x:Type ui:NumberBox}}">
                    <Setter Property="Margin" Value="5"/>
                </Style>
                <Style TargetType="UniformGrid">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Top"/>
                </Style>
                <Style TargetType="GroupBox">
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </ScrollViewer.Resources>
            <StackPanel Margin="5">
                <mcart:StretchyWrapPanel>
                    <Expander Header="{x:Static st:FeDataEditorView.BasicProperties}" IsExpanded="True">
                        <StackPanel Margin="5">
                            <ui:TextBox
                                hlp:Form.Label="{x:Static st:FeDataEditorView.CarName}"
                                Margin="5"
                                Text="{Binding Data.CarName}"/>
                            <mcart:StretchyWrapPanel StretchProportionally="True">
                                <ui:TextBox
                                    hlp:Form.Label="{x:Static st:FeDataEditorView.CarId}"
                                    VerticalAlignment="Center"
                                    MaxLength="4"
                                    Margin="5"
                                    HorizontalAlignment="Stretch"
                                    Text="{Binding Data.CarId}"/>
                                <ui:NumberBox
                                    hlp:Form.Label="{x:Static st:FeDataEditorView.SerialNumber}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    Margin="5"
                                    Minimum="0"
                                    Maximum="65535"
                                    Value="{Binding Data.SerialNumber}"/>
                                <ComboBox
                                    hlp:Form.Label="{x:Static st:FeDataEditorView.CarClass}"
                                    Margin="5"
                                    IsEditable="False"
                                    SelectedItem="{Binding Data.VehicleClass}"
                                    ItemsSource="{ct:EnumValProvider EnumType={x:Type md:Nfs3CarClass}}"/>
                                <ComboBox
                                    hlp:Form.Label="{x:Static st:FeDataEditorView.DriverSeat}"
                                    Margin="5"
                                    IsEditable="False"
                                    SelectedItem="{Binding Data.Seat}"
                                    ItemsSource="{ct:EnumValProvider EnumType={x:Type md:DriverSeatPosition}}"/>
                            </mcart:StretchyWrapPanel>
                            <mcart:StretchyWrapPanel Margin="5" StretchProportionally="True">
                                <CheckBox Margin="5" IsChecked="{Binding Data.IsPolice}">
                                    <TextBlock Text="{x:Static st:FeDataEditorView.IsPolice}"/>
                                </CheckBox>
                                <CheckBox Margin="5" IsChecked="{Binding Data.IsBonus}">
                                    <TextBlock Text="{x:Static st:FeDataEditorView.IsBonus}"/>
                                </CheckBox>
                                <CheckBox Margin="5" IsChecked="{Binding Data.AvailableToAi}">
                                    <TextBlock Text="{x:Static st:FeDataEditorView.IsAvailableToAI}"/>
                                </CheckBox>
                                <CheckBox Margin="5" IsChecked="{Binding Data.IsDlcCar}">
                                    <TextBlock Text="{x:Static st:FeDataEditorView.IsDlcCar}"/>
                                </CheckBox>
                            </mcart:StretchyWrapPanel>
                        </StackPanel>
                    </Expander>
                    <Expander MinWidth="200" Header="{x:Static st:FeDataEditorView.Compare}" VerticalAlignment="Stretch" IsExpanded="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock TextAlignment="Right" Margin="5" Text="{x:Static st:FeDataEditorView.Acceleration}"/>
                            <Slider VerticalAlignment="Center" Grid.Column="1" Maximum="20" Value="{Binding Data.CarAccel}"/>
                            <TextBlock TextAlignment="Center" Margin="5" Grid.Column="2" Text="{Binding Data.CarAccel, Mode=OneWay}"/>
                            <TextBlock TextAlignment="Right" Margin="5" Grid.Row="1" Text="{x:Static st:FeDataEditorView.TopSpeed}"/>
                            <Slider VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Maximum="20" Value="{Binding Data.CarTopSpeed}"/>
                            <TextBlock TextAlignment="Center" Margin="5" Grid.Row="1" Grid.Column="2" Text="{Binding Data.CarTopSpeed, Mode=OneWay}"/>
                            <TextBlock TextAlignment="Right" Margin="5" Grid.Row="2" Text="{x:Static st:FeDataEditorView.Handling}"/>
                            <Slider VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Maximum="20" Value="{Binding Data.CarHandling}"/>
                            <TextBlock TextAlignment="Center" Margin="5" Grid.Row="2" Grid.Column="2" Text="{Binding Data.CarHandling, Mode=OneWay}"/>
                            <TextBlock TextAlignment="Right" Margin="5" Grid.Row="3" Text="{x:Static st:FeDataEditorView.Braking}"/>
                            <Slider VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Maximum="20" Value="{Binding Data.CarBraking}"/>
                            <TextBlock TextAlignment="Center" Margin="5" Grid.Row="3" Grid.Column="2" Text="{Binding Data.CarBraking, Mode=OneWay}"/>
                        </Grid>
                    </Expander>
                </mcart:StretchyWrapPanel>
                <UniformGrid Margin="0">
                    <Expander Header="{x:Static st:FeDataEditorView.General}" IsExpanded="True" VerticalAlignment="Stretch">
                        <UniformGrid Columns="2">
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Manufacturer}" Text="{Binding Data.Manufacturer}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Model}" Text="{Binding Data.Model}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Price}" Text="{Binding Data.Price}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Status}" Text="{Binding Data.Status}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Weight}" Text="{Binding Data.Weight}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.WeightDistr}" Text="{Binding Data.WeightDistribution}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Width}" Text="{Binding Data.Width}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Height}" Text="{Binding Data.Height}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Length}" Text="{Binding Data.Length}"/>
                        </UniformGrid>
                    </Expander>
                    <Expander Header="{x:Static st:FeDataEditorView.Performance}" IsExpanded="True" VerticalAlignment="Stretch">
                        <UniformGrid Columns="2">
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Engine}" Text="{Binding Data.Engine}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Displacement}" Text="{Binding Data.Displacement}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Power}" Text="{Binding Data.Hp}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Torque}" Text="{Binding Data.Torque}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.MaxRpm}" Text="{Binding Data.MaxEngineSpeed}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Brakes}" Text="{Binding Data.Brakes}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Tires}" Text="{Binding Data.Tires}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.TopSpeed}" Text="{Binding Data.TopSpeed}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Accel0To60}" Text="{Binding Data.Accel0To60}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Accel0To100}" Text="{Binding Data.Accel0To100}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Transmission}" Text="{Binding Data.Transmission}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Gearbox}" Text="{Binding Data.Gearbox}"/>
                        </UniformGrid>
                    </Expander>
                    <Expander Header="{x:Static st:FeDataEditorView.History}" IsExpanded="True" VerticalAlignment="Stretch">
                        <UniformGrid Columns="2">
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History1}" Text="{Binding Data.History1}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History2}" Text="{Binding Data.History2}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History3}" Text="{Binding Data.History3}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History4}" Text="{Binding Data.History4}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History5}" Text="{Binding Data.History5}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History6}" Text="{Binding Data.History6}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History7}" Text="{Binding Data.History7}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.History8}" Text="{Binding Data.History8}"/>
                        </UniformGrid>
                    </Expander>
                    <Expander Header="{x:Static st:FeDataEditorView.Colors}" IsExpanded="True" VerticalAlignment="Stretch">
                        <UniformGrid Columns="2">
                            <UniformGrid.Resources>
                                <valueconverters:DrawingColorToBrushConverter x:Key="dc2bc"/>
                            </UniformGrid.Resources>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color1}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[0], Mode=OneWay}" Text="{Binding Data.Color1}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color2}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[1], Mode=OneWay}" Text="{Binding Data.Color2}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color3}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[2], Mode=OneWay}" Text="{Binding Data.Color3}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color4}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[3], Mode=OneWay}" Text="{Binding Data.Color4}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color5}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[4], Mode=OneWay}" Text="{Binding Data.Color5}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color6}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[5], Mode=OneWay}" Text="{Binding Data.Color6}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color7}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[6], Mode=OneWay}" Text="{Binding Data.Color7}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color8}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[7], Mode=OneWay}" Text="{Binding Data.Color8}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color9}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[8], Mode=OneWay}" Text="{Binding Data.Color9}"/>
                            <ui:TextBox hlp:Form.Label="{x:Static st:FeDataEditorView.Color10}" hlp:Form.FceColorPreview="{Binding PreviewFceColorTable[9], Mode=OneWay}" Text="{Binding Data.Color10}"/>
                        </UniformGrid>
                    </Expander>
                </UniformGrid>
                <Expander>
                    <Expander.Header>
                        <DockPanel>
                            <TextBlock>Unknown values (edit at your own risk)</TextBlock>
                            <CheckBox Style="{StaticResource ToggleSwitch}" x:Name="chkUnknown" Margin="10,0"/>
                        </DockPanel>
                    </Expander.Header>
                    <UniformGrid Columns="4" IsEnabled="{Binding IsChecked, ElementName=chkUnknown}">
                        <ui:NumberBox hlp:Form.Label="Unk_0x0c" Value="{Binding Data.Unk_0x0c}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x14" Value="{Binding Data.Unk_0x14}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x16" Value="{Binding Data.Unk_0x16}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x1a" Value="{Binding Data.Unk_0x1a}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x1c" Value="{Binding Data.Unk_0x1c}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x1e" Value="{Binding Data.Unk_0x1e}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x20" Value="{Binding Data.Unk_0x20}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x22" Value="{Binding Data.Unk_0x22}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x24" Value="{Binding Data.Unk_0x24}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x26" Value="{Binding Data.Unk_0x26}"/>
                        <ui:NumberBox hlp:Form.Label="Unk_0x2c" Value="{Binding Data.Unk_0x2c}"/>
                    </UniformGrid>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
