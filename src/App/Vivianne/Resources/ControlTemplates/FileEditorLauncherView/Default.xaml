<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mcart="http://schemas.thexds.local/mcart"
    xmlns:st="clr-namespace:TheXDS.Vivianne.Resources.Strings.Controls"
    xmlns:local="clr-namespace:TheXDS.Vivianne.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="local:FileEditorLauncherView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FileEditorLauncherView}">
                    <DockPanel Background="{StaticResource DarkBackground}">
                        <DockPanel.Resources>
                            <mcart:CountVisibilityConverter x:Key="a2vc"/>
                            <BooleanToVisibilityConverter x:Key="b2vc"/>
                        </DockPanel.Resources>
                        <StackPanel>
                            <StackPanel Margin="5">
                                <Button
                                    Margin="5"
                                    HorizontalAlignment="Stretch"
                                    Visibility="{Binding Launcher.CanCreateNew, Mode=OneWay, Converter={StaticResource b2vc}, RelativeSource={RelativeSource TemplatedParent}}"
                                    Command="{Binding Launcher.NewFileCommand, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}">
                                    <TextBlock Text="{Binding Launcher.PageName, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, StringFormat={x:Static st:FileEditorLauncherView.NewX}}"/>
                                </Button>
                                <Button Margin="5" Command="{Binding Launcher.OpenFileCommand, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding Launcher.PageName, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, StringFormat={x:Static st:FileEditorLauncherView.OpenX}}"/>
                                </Button>
                            </StackPanel>
                            <Separator Margin="5,0" Visibility="{Binding Launcher.AdditionalInteractions.Count, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource a2vc}}"/>
                            <ItemsControl Background="{StaticResource DarkBackground}" ItemsSource="{Binding Launcher.AdditionalInteractions, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Margin="5"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            HorizontalAlignment="Stretch"
                                            Margin="5"
                                            Command="{Binding Command, Mode=OneWay}"
                                            Content="{Binding Text, Mode=OneWay}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <DockPanel Grid.Column="1">
                            <TextBlock DockPanel.Dock="Top" Foreground="Gray" FontSize="18" Text="{x:Static st:FileEditorLauncherView.RecentFiles}"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Launcher.RecentFiles, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Command="{Binding Launcher.OpenFileCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:FileEditorLauncherView}}" CommandParameter="{Binding Mode=OneWay}">
                                                <StackPanel HorizontalAlignment="Left">
                                                    <TextBlock HorizontalAlignment="Left" x:Name="PART_friendlyName" Text="{Binding FriendlyName, Mode=OneWay}" FontSize="16" Foreground="Gray"/>
                                                    <TextBlock HorizontalAlignment="Left" x:Name="PART_filePath" FontSize="9" Foreground="Gray" Text="{Binding FilePath, Mode=OneWay}"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>