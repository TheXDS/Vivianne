<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:hlp="clr-namespace:TheXDS.Vivianne.Helpers"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:local="clr-namespace:TheXDS.Vivianne.Controls">
    <Style x:Key="DraggableLineGraphDefault" TargetType="{x:Type local:DraggableLineGraph}">
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DraggableLineGraph}">
                    <DockPanel>
                        <Expander Padding="0" DockPanel.Dock="Top">
                            <Expander.Header>
                                <DockPanel>
                                    <Button
                                        DockPanel.Dock="Right"
                                        Content="..."
                                        ToolTip="Edit in full screen"
                                        Padding="0"
                                        Command="{TemplateBinding OpenEditorDialogCommand}"
                                        CommandParameter="{TemplateBinding ItemsSource}"/>
                                    <TextBlock Margin="5,0" VerticalAlignment="Center" Text="{TemplateBinding Title}"/>
                                </DockPanel>
                            </Expander.Header>
                            <UniformGrid Margin="5" Rows="1">
                                <ui:NumberBox hlp:Form.Label="Min" Value="{Binding MinValue, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ui:NumberBox hlp:Form.Label="Max" Value="{Binding MaxValue, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </UniformGrid>
                        </Expander>
                        <Border MinHeight="20" MaxHeight="300"
							x:Name="PART_Container"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <Canvas ClipToBounds="True" Margin="5" x:Name="PART_Canvas"/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DraggableLineGraphBig" TargetType="{x:Type local:DraggableLineGraph}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DraggableLineGraph}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <UniformGrid Rows="1">
                            <ui:NumberBox hlp:Form.Label="Min" Value="{Binding MinValue, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ui:NumberBox hlp:Form.Label="Max" Value="{Binding MaxValue, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </UniformGrid>
                        <Border
                            x:Name="PART_Container"
                            MaxHeight="1000" MinHeight="100"
                            Grid.Row="1"                            
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <Canvas ClipToBounds="True" Margin="5" x:Name="PART_Canvas"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>