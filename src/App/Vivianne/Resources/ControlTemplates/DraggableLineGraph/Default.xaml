<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:hlp="clr-namespace:TheXDS.Vivianne.Helpers"
    xmlns:local="clr-namespace:TheXDS.Vivianne.Controls">
    <Style x:Key="DraggableLineGraphDefault" TargetType="{x:Type local:DraggableLineGraph}">
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DraggableLineGraph}">
                    <DockPanel>
                        <Expander Padding="0" DockPanel.Dock="Top">
                            <Expander.Header>
                                <TextBlock Margin="5,0" VerticalAlignment="Center" Text="{TemplateBinding Title}"/>
                            </Expander.Header>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:NumberBox Grid.Column="0" hlp:Form.Label="Min" Value="{Binding MinValue, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ui:NumberBox Grid.Column="1" hlp:Form.Label="Max" Value="{Binding MaxValue, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Button Grid.Column="2" Content="..." ToolTip="Edit in full screen" Margin="2" Command="{TemplateBinding OpenEditorDialogCommand}" CommandParameter="{TemplateBinding Data}"/>
                            </Grid>
                        </Expander>
                        <Border MinHeight="20" MaxHeight="300"
							x:Name="PART_Container"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <Canvas ClipToBounds="True" Margin="5" x:Name="PART_Canvas"/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>