<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mcart="http://schemas.thexds.local/mcart"
    xmlns:st="clr-namespace:TheXDS.Vivianne.Resources.Strings.Controls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:TheXDS.Vivianne.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Brushes.xaml"/>
        <ResourceDictionary Source="/Resources/CommonValueConverters.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="local:FileEditorCommandBar">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MinHeight" Value="45"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FileEditorCommandBar}">
                    <DockPanel>
                        <ui:Button Margin="0,5,5,5" Command="{Binding Editor.SaveCommand, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" Icon="{ui:SymbolIcon Symbol=Save24}"/>
                        <ui:Button Margin="5" Command="{Binding Editor.SaveAsCommand, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" Icon="{ui:SymbolIcon Symbol=DocumentSave24}"/>
                        <ui:Button Margin="5" Visibility="{Binding ShowClose, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Bool2VisConv}}" Command="{Binding Editor.SaveAndCloseCommand, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" Icon="{ui:SymbolIcon Symbol=ArrowLeft24}"/>
                        <ui:Button Margin="5" Visibility="{Binding ShowClose, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Bool2VisConv}}" Command="{Binding Editor.DiscardAndCloseCommand, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" Icon="{ui:SymbolIcon Symbol=Backspace24}"/>
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>